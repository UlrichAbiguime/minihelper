<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- pressed 点击 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#d8d8d8" android:startColor="#ffffff" />
            <stroke android:width="0.5dp" android:color="#a6680e" />
            <!-- 描边 -->
            <corners android:radius="0dp" />
            <padding android:bottom="5dp" android:left="25dp" android:right="25dp" android:top="5dp" />
        </shape></item>

    <!-- focus 获得焦点 -->
    <item android:state_focused="true"><shape>
            <!-- 渐变 -->
            <gradient android:angle="270" android:endColor="#d8d8d8" android:startColor="#ffffff" />
            <!-- 描边 -->
            <stroke android:width="0.5dp" android:color="#2d6192" />
            <!-- 圆角 -->
            <corners android:radius="0dp" />
            <padding android:bottom="5dp" android:left="25dp" android:right="25dp" android:top="5dp" />
        </shape></item>

    <!-- default -->
    <item>
        <shape>
            <!-- 渐变 -->
            <gradient android:angle="270" android:endColor="#ff9c00" android:startColor="#ffc600" />
            <stroke android:width="0.5dp" android:color="#adadad" />
            <!-- 圆角 -->
            <corners android:radius="0dp" />
            <padding android:bottom="5dp" android:left="25dp" android:right="15dp" android:top="5dp" />
            
        </shape>
    </item>

</selector>