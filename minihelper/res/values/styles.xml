<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 头部 -->
    <style name="allheader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="newradiobutton">
        <item name="android:button">@drawable/radiobuttonstyle</item>
    </style>

    <!-- 上报部分 -->
    <!-- 上报详情LinearLayout style 上报人/上报时间所在行 -->
    <style name="reportinfolinstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>

    <!-- 上报详情的textView style 深黄色提示信息 -->
    <style name="reportinfotvreportstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:textColor">#cc6600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 上报人/时间后面的获取的数据 灰色数据信息 -->
    <style name="reportinfotvdatastyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/defaulttext</item>
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 上报详情页面 分割线 -->
    <style name="reportdashedlinestyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">20px</item>
       
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:visibility">gone</item>
        <!--  <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_marginRight">5sp</item> -->
    </style>

    <!-- 显示隐藏正文按钮style -->
    <style name="reportinfobtnstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">#90d43f</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <!-- 他人上报Item项中的时间Style 灰色-->
    <style name="othersreportitemtime">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/defaulttext</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- 回复列表Item 黑色提示回复内容/时间 -->
    <style name="replytvtipstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dip</item>
    </style>

    <!-- 回复列表Item项灰色文字显示 -->
    <style name="replydatatvstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightgrey</item>
    </style>
    
   <!-- 首页获取回复消息列表 黄绿色提示回复人/时间/内容-->
     <style name="ireplymsgitemtiptvstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellowgreen</item>
        <item name="android:textSize">16dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
    
     <!-- 首页获取回复消息列表 灰色回复人/时间/内容 -->
   <style name="ireplymsgitemdatatvstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dip</item>
        <item name="android:text">@string/defaulttext</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- 设置部分 -->
    <!-- RelativeLayoutStyle -->
    <style name="settinghomerllinstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 分割线 -->
    <style name="settinghomeviewstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/dashed_line</item>
    </style>

    <!-- textView显示文字 -->
    <style name="settinghometvstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- next textView -->
    <style name="settinghometvnextstyle">
        <item name="android:layout_width">20dip</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- SettingDisplayAct -->
    <!-- 显示隐藏正文LinearLayout -->
    <style name="settingdisplaylinstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 显示隐藏正文RadioButton -->
    <style name="settingdisplayrbstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- SettingURLAct -->
    <!-- Item LinearLayout -->
    <style name="settingurlitemlinstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- 包含连个Textew LinearLayout -->
    <style name="settingurllinstyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- 黑色文字显示 -->
    <style name="settingurltvstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 显示隐藏正文TextView -->
    <style name="settingdisplaytvstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
	<!-- 新添加 -->
    <!-- 收到消息列表(推荐、回复) -->
    <style name="rmliststyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:text">@string/defaulttext</item>
        <item name="android:textColor">@color/black</item>
    </style> 
    
    <!-- 推荐信息style -->
    
    <style name="rlinfostyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style> 
    
    
    
     <!-- 转发ListItemstyle     android:layout_alignParentTop="true"-->
    
    <style name="forwardlvitemstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
            <item name="android:textColor">@color/grey</item>
    </style> 
    
    
    
    <style name="topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46.0dip</item>
    </style>
    
    <style name="topbar_text">
	    <item name="android:textSize">23sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">#ffffffff</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:shadowColor">#40000000</item>
	    <item name="android:shadowDy">-2.0</item>
	    <item name="android:shadowRadius">4.0</item>
	    <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">7.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">7.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    
    

</resources>