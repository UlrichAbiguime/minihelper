<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lla_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="2"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/texttitleSize" />
    </LinearLayout>

    <!-- 来源 -->

    <LinearLayout
        android:id="@+id/ll_source"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title" >

        <!-- 来源图片 -->

        <LinearLayout
            android:id="@+id/ll_ivsourceforlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_sourceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:background="@drawable/feed_taggeduser_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tvsourceforlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="来源"
                android:textColor="@color/black"
                android:textSize="@dimen/textSourceSize" />
        </LinearLayout>
    </LinearLayout>

    <!-- 内容 -->

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_source"
        android:gravity="center_horizontal|top" >

        <LinearLayout
            android:id="@+id/ll_tvcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top" >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="内容A"
                android:textColor="@color/black"
                android:textSize="@dimen/textContentSize" />
        </LinearLayout>
        <!-- 图片 -->

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip" >

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>

    <!-- 
    <View
        android:id="@+id/dividline"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line" />
 -->
</RelativeLayout>